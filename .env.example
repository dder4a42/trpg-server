# ========================================
# TRPG Server Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ========================================
# LLM API Configuration
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Settings
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=800
LLM_TIMEOUT_SECONDS=60

# ========================================
# Database Configuration
# ========================================
DB_PATH=./data/trpg.db

# ========================================
# Game Configuration
# ========================================
MAX_ROOMS=10
MAX_MESSAGES_PER_ROOM=1000
SAVE_DIRECTORY=./saves

# ========================================
# Room Defaults
# ========================================
ROOM_MAX_PLAYERS=4
ROOM_MAX_HISTORY_TURNS=10
ROOM_MAX_SHORT_TERM=12
ROOM_MAX_LONG_TERM=50

# ========================================
# Authentication & Admin
# ========================================
# Set this to enable admin access (username that will have admin privileges)
ADMIN_USERNAME=admin

# JWT Secret for token-based authentication
# IMPORTANT: Generate a secure random string (min 32 characters)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this

# JWT Configuration (optional - uses defaults if not set)
AUTH_ACCESS_TOKEN_TTL_MINUTES=15
AUTH_ISSUER=trpg-server

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_DIR=./logs
