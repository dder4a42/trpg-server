{
  "name": "trpg-server",
  "version": "2.0.0",
  "description": "TRPG Game Server - Unified TypeScript Backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias && node esbuild.config.mjs",
    "build:watch": "tsc-alias -w",
    "build:frontend": "node esbuild.config.mjs",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "migrate:session-devices": "tsx scripts/migrate-session-devices.ts"
  },
  "keywords": [
    "trpg",
    "game-server",
    "typescript",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.1",
    "lowdb": "^7.0.1",
    "marked": "^17.0.1",
    "morgan": "^1.10.0",
    "openai": "^4.28.4",
    "pug": "^3.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/pug": "^2.0.10",
    "@types/uuid": "^9.0.8",
    "esbuild": "^0.19.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
